div.theme--dark.v-list
  padding-top: 0
  padding-bottom: 0
  background-color: transparent

div.v-list__tile__content
  overflow: visible

div.v-tooltip__content
  box-shadow: none
  background-color: $nikolai-colors.green.secondary
  opacity: 1 !important;

.theme--dark.v-input--slider span.v-slider__ticks
label.theme--dark.v-label
.theme--dark.v-list div.v-list__tile__sub-title
  color: white

.v-list__tile
  line-height: 1.2

div.v-list__tile__sub-title
  font-size: 13px

div.accent--text
i.accent--text
  color: white !important
  caret-color: white !important

.v-avatar .v-avatar
.v-avatar .v-icon
  @supports (clip-path: polygon(0 0))
    border-radius: 0;
    clip-path: polygon(50% 0%, 93.3% 25%, 93.3% 75%, 50% 100%, 6.7% 75%, 6.7% 25%);

.v-list__tile__avatar .v-avatar .v-icon
  clip-path: none;
  background-color: transparent;

.v-avatar img
  @supports (clip-path: polygon(0 0))
    border-radius: 0;

.v-select-list .v-list__tile--active
  color: white !important

@import '~vuetify/src/stylus/app'
