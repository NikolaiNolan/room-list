$body-font-family = Montserrat, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Droid Sans', 'Helvetica Neue', sans-serif

$font-weights = {
  thin: 100,
  light: 300,
  regular: 400,
  medium: 600,
  bold: 700,
  black: 900
}

$headings = {
  h1: { size: 112px, weight: 700, line-height: 1, letter-spacing: -.03em, font-family: $heading-font-family },
  h2: { size: 56px, weight: 700, line-height: 1.35, letter-spacing: -.03em, font-family: $heading-font-family },
  h3: { size: 48px, weight: 700, line-height: 50px, letter-spacing: -.03em, font-family: $heading-font-family },
  h4: { size: 34px, weight: 700, line-height: 36px, letter-spacing: -.03em, font-family: $heading-font-family },
  h5: { size: 24px, weight: 600, line-height: 32px, letter-spacing: -.03em, font-family: $heading-font-family },
  h6: { size: 20px, weight: 600, line-height: 1, letter-spacing: -.03em, font-family: $heading-font-family },
  subheading: { size: 16px, weight: 600 },
  body-2: { size: 14px, weight: 600 },
  body-1: { size: 14px, weight: 400 },
  caption: { size: 12px, weight: 400 }
}

$colors = {
  blue: {
    base: #008cd2,
  },
  red: {
    base: #c20839,
  },
  green: {
    base: #00a532,
  },
  purple: {
    base: #935782,
  },
  orange: {
    base: #dd731d,
  },
}

@import '~vuetify/src/stylus/app'
